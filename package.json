{
    "name": "salesforce-diff",
    "displayName": "Salesforce Diff",
    "description": "Diff local files with what is compiled on salesforce",
    "version": "0.0.5",
    "publisher": "chuckjonas",
    "engines": {
        "vscode": "^1.5.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ChuckJonas/vscode-salesforce-diff"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.diffApexClass"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.diffApexClass",
                "title": "Diff with default org",
                "category": "SF Diff"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == 'apex'",
                    "command": "extension.diffApexClass",
                    "title": "Diff with Salesforce"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^8.0.40",
        "mocha": "^6.2.0",
        "typescript": "^3.3.1",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "@oclif/command": "1",
        "@oclif/config": "1",
        "@oclif/errors": "1",
        "@salesforce/command": "^2.1.0",
        "@salesforce/core": "^2.1.0"
    }
}
